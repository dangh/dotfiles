// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "base_keymap": "SublimeText",
  "theme": "Solarized Light",
  "buffer_font_family": "Berkeley Mono Trial Fixed",
  // "buffer_font_family": "PragmataPro Liga Math",
  // "buffer_font_family": "JetBrains Mono",
  // "buffer_font_family": "Martian Mono Nr Lt",
  "buffer_font_size": 14,
  "vim_mode": true,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "tab_size": 2,
  "projects_online_by_default": false,
  "default_dock_anchor": "expanded",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "assistant": {
    "button": false,
  },
  "terminal": {
    "blinking": "off",
    "line_height": "standard"
  },
  "show_whitespaces": "none",
  "show_wrap_guides": false,
  // "active_pane_magnification": 3,
  "project_panel": {
    "dock": "right",
  },
  "tabs": {
    "git_status": true,
  },
  "languages": {
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "rome-format",
          "arguments": [
            "--skip-errors",
            "--indent-style=space",
            "--line-width=120",
            "--quote-style=single",
            "--stdin-file-path={buffer_path}"
          ]
        }
      },
      "soft_wrap": "none"
    },
    "JavaScript-dprint": {
      "format_on_save": {
        "external": {
          "command": "dprint",
          "arguments": [
            "fmt",
            "--stdin={buffer_path}"
          ]
        }
      },
      "soft_wrap": "none"
    },
    "TypeScript": {
      "format_on_save": {
        "external": {
          "command": "dprint",
          "arguments": [
            "fmt",
            "--stdin={buffer_path}"
          ]
        }
      }
    },
    "JSON": {
      "format_on_save": "off",
      "tab_size": 2
    },
    "JSON2": {
      "format_on_save": {
        "external": {
          "command": "dprint",
          "arguments": [
            "fmt",
            "--stdin={buffer_path}"
          ]
        }
      }
    },
    "Markdown": {
      "soft_wrap": "none"
    }
  },
  "lsp": {
    "yaml-language-server": {
      "initialization_options": {
        "yaml.customTags": [
          "!And scalar",
          "!And mapping",
          "!And sequence",
          "!If scalar",
          "!If mapping",
          "!If sequence",
          "!Not scalar",
          "!Not mapping",
          "!Not sequence",
          "!Equals scalar",
          "!Equals mapping",
          "!Equals sequence",
          "!Or scalar",
          "!Or mapping",
          "!Or sequence",
          "!FindInMap scalar",
          "!FindInMap mappping",
          "!FindInMap sequence",
          "!Base64 scalar",
          "!Base64 mapping",
          "!Base64 sequence",
          "!Cidr scalar",
          "!Cidr mapping",
          "!Cidr sequence",
          "!Ref scalar",
          "!Ref mapping",
          "!Ref sequence",
          "!Sub scalar",
          "!Sub mapping",
          "!Sub sequence",
          "!GetAtt scalar",
          "!GetAtt mapping",
          "!GetAtt sequence",
          "!GetAZs scalar",
          "!GetAZs mapping",
          "!GetAZs sequence",
          "!ImportValue scalar",
          "!ImportValue mapping",
          "!ImportValue sequence",
          "!Select scalar",
          "!Select mapping",
          "!Select sequence",
          "!Split scalar",
          "!Split mapping",
          "!Split sequence",
          "!Join scalar",
          "!Join mapping",
          "!Join sequence"
        ]
      }
    }
  }
}
